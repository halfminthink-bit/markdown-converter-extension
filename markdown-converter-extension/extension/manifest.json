{
  "manifest_version": 3,
  "name": "Google Docs Markdown Converter",
  "version": "1.1.0",
  "description": "Google DocsでMarkdown記法を簡単に変換できる拡張機能（クリップボード版）",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}